<UserControl x:Class="ProjectArbeteBrädspel.CreditsItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectArbeteBrädspel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" FlowDirection="RightToLeft" Margin="0 10 0 0">

        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:CreditsItem}}, Path=Person}"
                   FontSize="22" FontWeight="Bold" Foreground="{StaticResource ForegroundBrush}" LineHeight="22" />
        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:CreditsItem}}, Path=Title}"
                   FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource HighlightYellowBrush}" LineHeight="14" />
    </StackPanel>
</UserControl>
