<UserControl x:Class="ProjectArbeteBrädspel.CountryTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectArbeteBrädspel"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="510" d:DesignWidth="350">
    <Border Background="{StaticResource ForegroundBrush}" CornerRadius="6" Margin="2.5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.5*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="1.5*" />
            </Grid.RowDefinitions>


            <Border x:Name="Mask" Grid.Row="0" CornerRadius="6 6 0 0">
                <Border.Background>
                    <ImageBrush ImageSource="{Binding FlagSource, ElementName=root}" Stretch="UniformToFill" />
                </Border.Background>
            </Border>

            <Viewbox Grid.Row="2">
                <TextBlock Margin="5 2" Text="{Binding Title, ElementName=root}" FontWeight="Bold" />
            </Viewbox>
        </Grid>
    </Border>
</UserControl>
